<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    tools:context=".control.CarRemoteControlFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/contView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <ImageButton
                            android:id="@+id/airControl"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:background="@android:color/transparent"
                            android:src="@drawable/air"
                            android:layout_marginTop="30dp" />

                        <TextView
                            android:id="@+id/air"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="공조 설정"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                            android:fontFamily="@font/bmhananapro"
                            android:textColor="#000000"/>
                    </LinearLayout>
                    <ImageButton
                        android:layout_marginRight="30dp"
                        android:layout_marginLeft="30dp"
                        android:id="@+id/powerOn"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/engine"
                        android:background="@android:color/transparent" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            >
                            <ImageButton
                                android:id="@+id/engineOff"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:scaleType="centerCrop"
                                android:background="@android:color/transparent"
                                android:src="@drawable/switchh"
                                android:layout_marginTop="30dp"/>

                            <TextView
                                android:id="@+id/off"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="엔진 Off"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/bmhananapro"
                                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                                android:textColor="#000000"/>

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>


            <TextView
                android:layout_marginTop="50dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="도어제어"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#000000"
                android:fontFamily="@font/bmhananapro"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnDoorOpen"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#AFDEE4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:layout_marginLeft="8dp"
                    android:text="OPEN"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/bmhananapro"
                    android:textColor="@color/brown"
                    />
                <Button
                    android:id="@+id/btnDoorLock"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#AFDEE4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="LOCK"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/bmhananapro"
                    android:textColor="@color/brown"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="비상등"
                android:gravity="center"
                android:textSize="30dp"
                android:textColor="#000000"
                android:fontFamily="@font/bmhananapro" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btnEmerLightOn"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#AFDEE4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="비상등"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/bmhananapro"
                    android:textColor="@color/brown"/>
                <Button
                    android:id="@+id/btnEmerLightOnSiren"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="#AFDEE4"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:text="비상등+경적"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/bmhananapro"
                    android:textColor="@color/brown"/>
            </LinearLayout>


