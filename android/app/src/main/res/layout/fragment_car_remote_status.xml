<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".control.CarRemoteStatusFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/statusView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:orientation="vertical"
            android:padding="50dp"
            android:gravity="right"
            android:background="@drawable/car">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/enginestart"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:gravity="end"
                        android:textSize="20dp"
                        android:text="시동"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#E43535"/>
                    <TextView
                        android:id="@+id/engineText"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:gravity="end"
                        android:text="꺼짐"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/lock"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:gravity="end"
                        android:textSize="20dp"
                        android:text="도어"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#E43535"/>
                    <TextView
                        android:id="@+id/doorText"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:gravity="end"
                        android:text="잠김"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/gongjo"/>
                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="60dp"
                    android:gravity="right"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:gravity="end"
                        android:textSize="20dp"
                        android:text="공조"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.1dp"
                        android:background="#E43535"/>
                    <TextView
                        android:id="@+id/airText"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:gravity="end"
                        android:text="꺼짐"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@drawable/enginestart"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="시동"
                android:textSize="20dp"
                android:gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/engineText2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="꺼짐"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
            <LinearLayout
                android:layout_width="350dp"
                android:layout_height="35dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:src="@drawable/lock"/>
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="도어"
                    android:textSize="20dp"
                    android:gravity="center"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/doorText2"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:text="잠김"
                    android:textSize="20dp"
                    android:gravity="center"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:src="@drawable/car"/>
                <TextView
                    android:id="@+id/doorText3"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="모두 닫힘"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical|left"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:paddingLeft="10dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:src="@drawable/car"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="트렁크 닫힘"
                    android:textSize="15dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical|left"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="35dp"
            android:layout_marginBottom="25dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:layout_gravity="left"
                android:src="@drawable/gongjo"/>
            <TextView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="공조"
                android:textSize="20dp"
                android:gravity="center"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/airText2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="꺼짐"
                android:textSize="20dp"
                android:gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="새로고침" />

    </LinearLayout>
    </ScrollView>
</LinearLayout>