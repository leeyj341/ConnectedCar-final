<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bothborder">

    <TextView
        android:id="@+id/text_exchange_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/text_exchange_code"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:text="부품코드"
        android:fontFamily="@font/bmhananapro"

        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" > "
        android:fontFamily="@font/bmhananapro"

        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/text_exchange_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="부품이름"
        android:fontFamily="@font/bmhananapro"
        android:layout_weight="1"
        android:layout_gravity="center"/>

    <Button
        android:id="@+id/button_selectexpendable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="선택"
        android:layout_gravity="right"
        android:textColor="@color/brown"
        android:fontFamily="@font/bmhananapro"
        android:background="@color/skyblue"
        android:layout_margin="5dp">
    </Button>


</LinearLayout>