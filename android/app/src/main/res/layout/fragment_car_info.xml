            android:paddingLeft="30dp"
            android:textStyle="bold"
            android:text="번호 : "
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:fontFamily="@font/bmhananapro"
            android:layout_marginBottom="10dp"/>
